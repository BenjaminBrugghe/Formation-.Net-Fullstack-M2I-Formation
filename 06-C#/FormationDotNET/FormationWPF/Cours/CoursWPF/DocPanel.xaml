<Window x:Class="CoursWPF.DocPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursWPF"
        mc:Ignorable="d"
        Title="DocPanel" Height="450" Width="800" WindowStartupLocation="CenterScreen" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Window.Resources>
        <BitmapImage x:Key="M2iLogo" UriSource="/img/BanniereM2i.png"/>
    </Window.Resources>
    
    <DockPanel>
        <Image DockPanel.Dock="Top" Source="{StaticResource ResourceKey=M2iLogo}" Height="100" HorizontalAlignment="Left"/>
        <TextBlock Text="Footer" DockPanel.Dock="Bottom" Background="Red" Width="800px" Height="40px" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Text="Left Menu" DockPanel.Dock="Left" Background="Aqua" Width="100px"/>
        <TextBlock Text="Right Menu" DockPanel.Dock="Right" Background="Aqua" Width="100px"/>
    </DockPanel>
</Window>
