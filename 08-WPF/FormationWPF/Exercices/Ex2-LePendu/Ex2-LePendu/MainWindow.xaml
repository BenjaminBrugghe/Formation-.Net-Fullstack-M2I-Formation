<Window x:Class="Ex2_LePendu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex2_LePendu"
        mc:Ignorable="d"
        Title="Le Pendu" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#FF6F6F6F">
    <Grid Background="#FF969696">
        <TextBlock x:Name="Ligne1" FontSize="24"/>
        <TextBox x:Name="userLetter" Margin="0,50,0,0" FontSize="22" Background="#FF8E8E8E"/>
        <Button x:Name="ValidBtn" Click="Valider_click" Content="Valider" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,50,0,0" FontSize="20"/>
        <Image x:Name="ImagePendu" Source="/img/pendu-1.jpg" HorizontalAlignment="Right" Width="300" Height="300" Margin="0,0,30,0"/>
    </Grid>
</Window>
